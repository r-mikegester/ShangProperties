{
    "headers": [
        {
            "source": "/fonts/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=604800, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(webp|jpg|jpeg|png|gif)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/index.js"
        }
    ],
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/src/**"
                ]
            }
        }
    ]
}